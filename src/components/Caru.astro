---
import { Image } from "astro:assets";
import car1 from "/src/images/carousel/car1.jpg";
import car2 from "/src/images/carousel/car2.jpg";
import car3 from "/src/images/carousel/car3.jpg";
import car4 from "/src/images/carousel/car4.jpg";

---
<div class="carousel">
  <div class="carousel-inner">
      <input class="carousel-open" type="radio" id="carousel-1" name="carousel" aria-hidden="true" hidden="" checked="checked">
      <div class="carousel-item">
          <Image src={car1} alt="Carrusel 1"  loading="eager"  />
      </div>
      <input class="carousel-open" type="radio" id="carousel-2" name="carousel" aria-hidden="true" hidden="">
      <div class="carousel-item">
        <Image src={car2} alt="Carrusel 2"  loading="eager"  />
      </div>
      <input class="carousel-open" type="radio" id="carousel-3" name="carousel" aria-hidden="true" hidden="">
      <div class="carousel-item">
        <Image src={car3} alt="Carrusel 3"  loading="eager"  />
      </div>
      <input class="carousel-open" type="radio" id="carousel-4" name="carousel" aria-hidden="true" hidden="">
      <div class="carousel-item">
        <Image src={car4} alt="Carrusel 4"  loading="eager"  />
      </div>
      <label for="carousel-4" class="carousel-control prev control-1">‹</label>
      <label for="carousel-2" class="carousel-control next control-1">›</label>
      <label for="carousel-1" class="carousel-control prev control-2">‹</label>
      <label for="carousel-1" class="carousel-control next control-4">›</label>
      <label for="carousel-3" class="carousel-control next control-2">›</label>
      <label for="carousel-2" class="carousel-control prev control-3">‹</label>
      <label for="carousel-3" class="carousel-control prev control-4">‹</label>
      <label for="carousel-4" class="carousel-control next control-3">›</label>
  </div>
</div>


<style> 

.carousel {
    position: relative;
    box-shadow: 0px 1px 6px rgba(0, 0, 0, 0.64);
}

.carousel-inner {
    position: relative;
    overflow: hidden;
    width: 100%;
}

.carousel-open:checked + .carousel-item {
    position: static;
    opacity: 100;
}

.carousel-item {
    position: absolute;
    opacity: 0;
    transition: opacity 0.6s ease-out;
}

.carousel-item img {
    display: block;
    height: auto;
    max-width: 100%;
}

.carousel-control {
    border-radius: 50%;
    color: #ffffff;
    cursor: pointer;
    display: none;
    font-size: 60px;
    height: 60px;
    line-height: 35px;
    position: absolute;
    top: 50%;
    transform: translate(0, -50%);
    text-align: center;
    width: 40px;
    z-index: 10;
}

.carousel-control.prev {
    left: 2%;
}

.carousel-control.next {
    right: 2%;
}

.carousel-control:hover {
    color: #fc7303;
}

#carousel-1:checked ~ .control-1,
#carousel-2:checked ~ .control-2,
#carousel-3:checked ~ .control-3,
#carousel-4:checked ~ .control-4 {
    display: block;
}

.carousel-indicators {
    list-style: none;
    margin: 0;
    padding: 0;
    position: absolute;
    bottom: 2%;
    left: 0;
    right: 0;
    text-align: center;
    z-index: 10;
}

.carousel-indicators li {
    display: inline-block;
    margin: 0 5px;
}



#carousel-1:checked ~ .control-1 ~ .carousel-indicators li:nth-child(1) .carousel-bullet,
#carousel-2:checked ~ .control-2 ~ .carousel-indicators li:nth-child(2) .carousel-bullet,
#carousel-3:checked ~ .control-3 ~ .carousel-indicators li:nth-child(3) .carousel-bullet,
#carousel-4:checked ~ .control-4 ~ .carousel-indicators li:nth-child(4) .carousel-bullet {
    color: #428bca;
}


#title {
    width: 100%;
    position: absolute;
    padding: 0px;
    margin: 0px auto;
    text-align: center;
    font-size: 27px;
    color: rgba(255, 255, 255, 1);
    font-family: 'Open Sans', sans-serif;
    z-index: 9999;
    text-shadow: 0px 1px 2px rgba(0, 0, 0, 0.33), -1px 0px 2px rgba(255, 255, 255, 0);
}

[type='checkbox'], [type='radio'] {
    -webkit-appearance: none;
    -moz-appearance: none;
    print-color-adjust: exact;
    display: none;
    -moz-user-select: none;
    flex-shrink: 0;
}

</style>
<script>
    let slideIndex = 0;
    carousel();

    function carousel() {
        let i;
        let x = document.getElementsByClassName("carousel-open");
        for (i = 0; i < x.length; i++) {
            (x[i] as HTMLInputElement).checked = false;
        }
        slideIndex++;
        if (slideIndex > x.length) {slideIndex = 1}
        (x[slideIndex-1] as HTMLInputElement).checked = true;
        setTimeout(carousel, 4000);
    }
</script>
